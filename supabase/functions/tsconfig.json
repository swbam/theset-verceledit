{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"], // Include DOM for fetch etc.
    "moduleResolution": "node", // Deno typically uses node-like resolution for imports
    "allowImportingTsExtensions": true, // Allow '.ts' in import paths for Deno
    "strict": true, // Recommended for functions
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true, // Required by Deno
    "noEmit": true, // Functions are bundled, not emitted individually
    "jsx": "react-jsx", // Or "preserve" if needed, but usually "react-jsx" is fine
    "types": ["https://esm.sh/@supabase/functions-js/src/edge-runtime.d.ts"], // Add Supabase Edge Function types
    "paths": {
      // Allow importing shared code using a path alias
      "@shared/*": ["./_shared/*"]
    },
    "baseUrl": "." // Set base URL for path aliases
  },
  "include": ["./**/*.ts"], // Include all ts files within the functions directory
  "exclude": ["node_modules"]
}